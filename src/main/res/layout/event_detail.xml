<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFD"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_expand_more"
                />

        <ImageView
                android:id="@+id/photoEvent"
                android:layout_width="match_parent"
                android:layout_height="248dp"
                />

        <TextView
                android:id="@+id/idVenue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#00BCD4"
                android:textSize="18sp"
                />

        <TextView
                android:id="@+id/idNameEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#F44336"
                android:textSize="30sp"
                android:textStyle="bold"
                />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

            <TextView
                    android:id="@+id/idDateCount"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:textColor="#4E9600"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    />

        </LinearLayout>

        <TextView
                android:id="@+id/idContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                />

        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <TableRow
                    android:background="@drawable/textlines"
                    android:gravity="left"
                    >

                <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="Category"
                        android:textSize="20sp"
                        />

                <TextView
                        android:id="@+id/idCategory"
                        android:layout_width="310dp"
                        android:layout_height="50dp"
                        android:textSize="18sp"
                        />
            </TableRow>

            <TableRow>

                <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="Address"
                        android:textSize="20sp"
                        />

                <TextView
                        android:id="@+id/idAddress"
                        android:layout_width="310dp"
                        android:layout_height="50dp"
                        android:textSize="18sp"
                        />
            </TableRow>

            <TableRow
                    android:background="@drawable/textlines"
                    android:gravity="left"
                    >

                <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="Contact"
                        android:textSize="20sp"
                        />

                <TextView
                        android:id="@+id/idContact"
                        android:layout_width="310dp"
                        android:layout_height="50dp"
                        android:textSize="18sp"
                        />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>